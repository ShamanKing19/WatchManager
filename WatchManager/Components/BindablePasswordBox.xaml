<UserControl x:Class="WatchManager.Components.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WatchManager.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500">
    <UserControl.Resources>
        <Style x:Key="InputField">
            <Setter Property="Control.Background" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Control.HorizontalAlignment" Value="Center"/>
            <Setter Property="Control.VerticalAlignment" Value="Center"/>
            <Setter Property="Control.Height" Value="50"/>
            <Setter Property="Control.Width" Value="500"/>
            <Setter Property="Control.Foreground" Value="{StaticResource PrimaryFontColor}"/>
            <Setter Property="Control.FontSize" Value="{StaticResource PrimaryFontSize}"/>
            <Setter Property="Control.HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Control.VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <PasswordBox x:Name="passwordBox" PasswordChanged="PasswordBox_PasswordChanged" Style="{StaticResource InputField}"/>
</UserControl>
